<%= render "navbar" %>
<%= link_to "Products", controller: :application, action: :products %>
<%= stylesheet_link_tag "products" %>

<% if @product and @product.listed %>
  <div class="product">
    <h1><%= @product.name %></h1>
    <h3>$<%= Money.from_cents(@product.price_cents) %></h3>
    <% if @product.thumbnail.attached? %>
      <img src="<%= url_for @product.thumbnail %>" alt="">
    <% else %>
      <img src="/slime.jpg" alt="">
    <% end %>
    <br><br>
    <%= button_to "Add To Cart", controller: :orders, action: :add_cart, pid: @product.id %><br>
    <hr/>
    <p><%= @product.description %></p>
  </div>
<% else %>
  <h1>Product doesn't exist!</h1>
<% end %>



