<%= render "navbar" %>
<%= link_to "Products", "/products" %>
<h1>Cart</h1>
<% if @cart.cart_products.length > 0 %>
  <ul>
    <% @cart.cart_products.each do |pid| %>
      <li>
        <% @product = pid.product %>
        <h3><%= @product.name %> x<%= pid.quantity %></h3>
        <h4><%= Money.from_cents(@product.price_cents) %></h4>
        <%= button_to "Add 1", controller: :orders, action: :add_cart_qty, pid: @product.id %>
        <%= button_to "Remove 1", controller: :orders, action: :remove_cart_qty, pid: @product.id %>
      </li>
    <% end %>
  </ul>
  <br>
  <br>
  <%= button_to "Checkout", {controller: :application, action: :checkout}, {:method => :get} %>
<% else %>
  <h2>Your cart is empty!</h2>
<% end %>
